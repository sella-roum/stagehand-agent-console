{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowImportingTsExtensions": false,
    "noEmit": false,
    "jsx": "react-jsx"
  },
  "include": [
    "src/**/*.ts",
    "llm_clients/**/*.ts",
    "tests/**/*.ts",
    "*.ts",
    "types/**/*.ts",
    "gui/**/*.ts",
    "gui/**/*.tsx"
  ],
  "exclude": ["node_modules", "dist"]
}
